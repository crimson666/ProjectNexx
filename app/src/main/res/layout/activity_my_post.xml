<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="com.example.stealth.navigationdrawer1.my_post">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <ImageView


                app:srcCompat="@drawable/share_flat"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="60px"



                />

            <TextView
                android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Brodcast Yourself"
                android:layout_gravity="center_horizontal"
                android:textSize="35dp"
                android:textColor="#2980b9"/>



            /*title*/

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Title"
                    android:textSize="19dp"
                    android:id="@+id/txt_title"/>

                <EditText

                    android:id="@+id/title"
                    style="@style/edit_txt2"
                    android:layout_width="230dp"
                    android:hint="Give it a title"

                    />



            </LinearLayout>


        /*body*/
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Body"
                android:id="@+id/txt_body"
                android:textSize="19dp" />

            <EditText

                android:id="@+id/body"
                style="@style/edit_txt3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Make your post here"

                />



            /*fb*/



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Facebook"
                android:id="@+id/txt_fb"
                android:textSize="19dp" />

            <EditText

                android:id="@+id/facebook"
                style="@style/edit_txt2"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Facebook link"

                />


            /*linkedin*/




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="Linkedin"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_linkedin"
                android:textSize="19dp" />

            <EditText

                android:id="@+id/linkedin"
                style="@style/edit_txt2"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="linkedin link"

                />


            /*linkedin*/




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="Twitter"
                android:layout_marginTop="5dp"
                android:id="@+id/txt_twitter"
                android:textSize="19dp" />

            <EditText

                android:id="@+id/twitter"
                style="@style/edit_txt2"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Twitter lik"

                />

            <Button

                android:id="@+id/button1"
                style="@style/buttons_style2"
                android:layout_width="280dp"
                android:text="POST"
                android:layout_gravity="center"
                android:onClick="post"
                android:layout_marginBottom="30dp"


                />



        </LinearLayout>


    </ScrollView>

</LinearLayout>
