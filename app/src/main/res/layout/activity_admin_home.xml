<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    tools:context="com.example.stealth.navigationdrawer1.admin_home">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView


        app:srcCompat="@drawable/admin_icon"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="60px"
        android:layout_marginBottom="20px"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Pannel"
        android:textColor="#e91e63"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:id="@+id/header"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="post"
                android:orientation="vertical"
                android:background="#2ecc71">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/job_post"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="POST A JOB"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ffff"
                    android:paddingBottom="5dp"
                    android:id="@+id/txt1"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="apply"
                android:orientation="vertical"
                android:background="#9b59b6">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/work_white"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="JOB APPLICANT"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:paddingBottom="5dp"
                    android:id="@+id/txt2"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
</LinearLayout>