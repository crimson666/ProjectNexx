<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.example.stealth.navigationdrawer1.admin_jobpost">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <ImageView


                app:srcCompat="@drawable/job_flat"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="60px"



                />

            <TextView
                android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Post a job"
                android:layout_gravity="center_horizontal"
                android:textSize="35dp"
                android:textColor="#2980b9"/>



            /*id*/

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Job ID"
                    android:textSize="19dp"
                    android:id="@+id/txt_id"/>

                <EditText

                    android:id="@+id/id"
                    style="@style/edit_txt2"
                    android:layout_width="230dp"
                    android:hint="Enter job ID"

                    />



            </LinearLayout>




            /*title*/

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Title"
                    android:textSize="19dp"
                    android:id="@+id/txt_title"/>

                <EditText

                    android:id="@+id/title"
                    style="@style/edit_txt2"
                    android:layout_width="230dp"
                    android:hint="Give it a title"

                    />



            </LinearLayout>


            /*position*/

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Position"
                    android:textSize="19dp"
                    android:id="@+id/txt_position"/>

                <EditText

                    android:id="@+id/position"
                    style="@style/edit_txt2"
                    android:layout_width="230dp"
                    android:hint="Job Position"

                    />



            </LinearLayout>



            /*dept*/

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Department"
                    android:textSize="16dp"
                    android:id="@+id/txt_dept"/>

                <EditText

                    android:id="@+id/dept"
                    style="@style/edit_txt2"
                    android:layout_width="230dp"
                    android:hint="Enter Department"

                    />



            </LinearLayout>


            /*req*/

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Requerment"
                    android:textSize="16dp"
                    android:id="@+id/txt_req"/>

                <EditText

                    android:id="@+id/req"
                    style="@style/edit_txt2"
                    android:layout_width="230dp"
                    android:hint="Cutoff Percentage"

                    />



            </LinearLayout>

            /*skills*/



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"

                android:text="Skill Sets"
                android:id="@+id/txt_skill"
                android:textSize="19dp" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="19dp"/>

            <EditText

                android:id="@+id/skill"
                style="@style/edit_txt3"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter your Skills"

                />







            /*body*/
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Body"
                android:id="@+id/txt_body"
                android:textSize="19dp" />

            <EditText

                android:id="@+id/body"
                style="@style/edit_txt3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Make your post here"

                />

            <Button

                android:id="@+id/button1"
                style="@style/buttons_style2"
                android:layout_width="280dp"
                android:text="POST"
                android:layout_gravity="center"
                android:onClick="post"
                android:layout_marginBottom="30dp"


                />



        </LinearLayout>


    </ScrollView>

</LinearLayout>
