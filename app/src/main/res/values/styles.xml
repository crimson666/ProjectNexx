<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- edit text style  -->
    <style name="edit_txt">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/shape_txt</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- edit text style2  -->
    <style name="edit_txt2">
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/shape_txt2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">#595959</item>

    </style>

    <!-- edit text style3  -->
    <style name="edit_txt3">
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/shape_txt3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">#595959</item>
    </style>


    <!--registration page button style  -->
    <style name="buttons_style1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/shape</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#fff</item>

    </style>


    <!--registration page button style  -->
    <style name="buttons_style2">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/shape_btn</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#fff</item>

    </style>




</resources>
